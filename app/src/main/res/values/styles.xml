<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- Showcase theme -->
    <style name="MyShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#E6999999</item>
        <item name="sv_showcaseColor">#CC555555</item>
        <item name="sv_buttonText">@string/dismiss_help_button</item>
        <item name="sv_tintButtonColor">true</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
        <item name="sv_detailTextAppearance">@style/CustomDetails</item>
    </style>
    
    <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">#444444</item>
    </style>
    
    <style name="CustomDetails" parent="TextAppearance.ShowcaseView.Detail">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
